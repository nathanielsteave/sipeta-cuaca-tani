---
interface Props {
  title: string;
  icon?: string;
}

const { title, icon } = Astro.props;
---

<details class="bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded-xl shadow-sm overflow-hidden transition-colors duration-300 group">
  <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-neutral-50 dark:hover:bg-neutral-700/50">
    <div class="flex items-center gap-4">
      {icon && <span class="text-2xl">{icon}</span>}
      <h3 class="font-semibold text-primary-800 dark:text-primary-200">{title}</h3>
    </div>
    <div class="transform transition-transform duration-300 group-open:rotate-180">
      <svg class="w-5 h-5 text-neutral-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </div>
  </summary>
  <div class="p-4 border-t border-neutral-200 dark:border-neutral-700 bg-neutral-50/50 dark:bg-neutral-900/50">
    <div class="prose prose-sm dark:prose-invert max-w-none">
      <slot />
    </div>
  </div>
</details>